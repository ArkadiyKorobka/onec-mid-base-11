&НаКлиенте
Процедура РассчитатьСуммуСтроки(ТекущиеДанные)
	Если ЗначениеЗаполнено(Объект.КА_СогласованнаяСкидка) Тогда
		ОбщаяСкидка = Объект.КА_СогласованнаяСкидка + ТекущиеДанные.Скидка;
		
		Если ОбщаяСкидка >= 100 Тогда
			ТекущиеДанные.Сумма = 0;
			Сообщить("Суммарная скидка достигла 100%. Сумма установлена в 0.", СтатусСообщения.Информация);
		ИначеЕсли ОбщаяСкидка <= 0 Тогда
			ТекущиеДанные.Сумма = Окр(ТекущиеДанные.Цена * ТекущиеДанные.Количество, 2);
		Иначе
			ТекущиеДанные.Сумма = Окр(ТекущиеДанные.Цена * ТекущиеДанные.Количество * (1 - ОбщаяСкидка/100), 2);
		КонецЕсли;
	Иначе
		Если ТекущиеДанные.Скидка >= 100 Тогда
			ТекущиеДанные.Сумма = 0;
			Сообщить("Скидка по строке достигла 100%. Сумма установлена в 0.", СтатусСообщения.Информация);
		ИначеЕсли ТекущиеДанные.Скидка <= 0 Тогда
			ТекущиеДанные.Сумма = Окр(ТекущиеДанные.Цена * ТекущиеДанные.Количество, 2);
		Иначе
			ТекущиеДанные.Сумма = Окр(ТекущиеДанные.Цена * ТекущиеДанные.Количество * (1 - ТекущиеДанные.Скидка/100), 2);
		КонецЕсли;
	КонецЕсли;
	
	РассчитатьСуммуДокумента();
	
КонецПроцедуры

